/* pages/index/index.wxss */
page{
  background-color: #0b58a5;
}
.logo{
  width: 400rpx;
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.loadingdot{
  width: 100%;
  height: 100rpx;
  text-align: center;
  overflow: hidden;
}
.dot{
  width: 10rpx;
  height: 10rpx;
  display: inline-block;
  background-color: #fff;
  margin: 0 10rpx;
  animation: loading .8s linear infinite alternate;
}
@keyframes loading{
  0%{
    background-color: #0b58a5;
  }
  100%{
    background-color: #fff;
  }
}