<!--pages/changepass/changepass.wxml-->
<view class="container">
  <form bindsubmit="formSubmit">
    <view class="section section-gap">
      <input disabled="{{formloading}}" class="form-control" password name="pre_pass" maxlength="16" placeholder="登录密码" />
    </view>
    <view class="section section-gap">
      <input disabled="{{formloading}}" class="form-control" password name="new_pass" maxlength="16" placeholder="新密码" />
    </view>
    <view class="section section-gap">
      <input disabled="{{formloading}}" class="form-control" password name="confirm_pass" maxlength="16" placeholder="确认新密码" />
    </view>
    <view class="btn-area">
      <button loading="{{formloading}}" disabled="{{formloading}}" class="btn btn-common" formType="submit">保存密码</button>
    </view>
  </form>
</view>
