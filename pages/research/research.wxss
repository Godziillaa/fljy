/* pages/research/research.wxss */
.container{
  background-color: #fff;
}
form{
  width: 100%;
  border-bottom: #f3f3f3 solid 1rpx;
  box-sizing: border-box;
  padding: 40rpx 0;
}
.search-group{
  width: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 0 200rpx 0 40rpx;
  overflow: hidden;
}
.group-left{
  width: 100%;
  background-color: #f3f3f3;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.group-right{
  height:90rpx;
  line-height: 90rpx;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translate(0,-50%);
  padding: 0 40rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: #0b58a5;
}
.history{
  width: 100%;
  padding: 0 40rpx 40rpx 40rpx;
  overflow: hidden;
}
.history-header{
  width:100%;
  line-height: 100rpx;
  overflow: hidden;
}
.history-label{
  display: block;
  float: left;
  padding: 0 40rpx;
  color: #c1c1c1;
}
.clear-history{
  display: block;
  float: right;
  padding: 0 40rpx;
}
.history-ul{
  width: 100%;
  padding: 0 20rpx 0 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.history-li{
  display: inline-block;
  padding: 20rpx;
  background-color: #ebeff5;
  border-radius: 10rpx;
  margin: 0 20rpx 20rpx 0;
}